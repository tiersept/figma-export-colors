# http://editorconfig.org
root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[{*.md, *.mdx}]
trim_trailing_whitespace = false

[{*.js,*.jsx,*.ts,*.tsx,*.css,*.yml,*.yaml,conf}]
indent_style = space
indent_size = 2

[*.prettierrc]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 2
